{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "convert:posts": "node scripts/convert-posts.js",
    "watch:posts": "chokidar 'posts/**/*.md' -c 'npm run convert:posts'",
    "dev": "concurrently \"npm run watch:posts\" \"next dev\" --names \"posts,next\" --prefix-colors \"blue,green\"",
    "dev:next": "next dev",
    "build": "npm run convert:posts && next build",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "motion": "^12.23.24",
    "next": "16.0.5",
    "prismjs": "^1.30.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rough-notation": "^0.5.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.5",
    "gray-matter": "^4.0.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
